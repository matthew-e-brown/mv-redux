{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "rootDir": "./src",
        "outDir": "./dist",
        "declarationDir": "./dist/types",
        "declarationMap": true,
        "declaration": true,
        "sourceMap": true,
        "lib": [
            "ES2023",
            "ES2023.Array",
            "ES2023.Collection",
            "DOM",
        ],
        "strict": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
    },
    "include": [
        "./src/**/*.ts",
    ],
