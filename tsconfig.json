{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "useDefineForClassFields": true, // we don't use any classes, but can't hurt
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable",
        ],
        // Output options
        // --------------------------------------
        "outDir": "./lib",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./lib/types",
        "declarationMap": true,
        // Linting
        // --------------------------------------
        "strict": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
    },
    "include": [
        "./src",
    ],
}
