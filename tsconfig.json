{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable",
        ],
        // Output options
        // --------------------------------------
        "outDir": "./lib",
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./lib/types",
        "inlineSourceMap": true,
        "useDefineForClassFields": true, // we don't use any classes, but can't hurt
        // Linting
        // --------------------------------------
        "strict": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
    },
    "include": [
        "./src",
    ],
    "exclude": [
        "./node_modules"
    ]
}
